#include "buffer/Buffer.h"
#include "boards/PMS5005.h"
#include "sockets/X80ProUDPSocket.h"
#include "X80Pro.h"

void suspendDCMotor(int channel)
{
	UDPSocket_send(PMS5005_suspendDCMotor(Buffer buf, channel));
}

void resumeDCMotor(int channel)
{
	UDPSocket_send(PMS5005_resumeDCMotor(Buffer buf, channel));
}

void resumeBothDCMotors()
{
	UDPSocket_send(PMS5005_resumeDCMotor(Buffer buf, 0));
	UDPSocket_send(PMS5005_resumeDCMotor(Buffer buf, 1));
}
